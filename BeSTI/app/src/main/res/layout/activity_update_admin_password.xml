<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_admin_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sti.lipa.dev.besti.UpdateAdminPassword"
    android:background="@drawable/backg">

    <EditText
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:ems="10"
        android:layout_marginTop="52dp"
        android:id="@+id/txteditaconpass"
        android:hint="Confirm new password"
        android:textSize="36sp"
        android:layout_below="@+id/txteditanewpass"
        android:layout_alignStart="@+id/txteditanewpass"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="134dp"
        android:id="@+id/txteditaoldpass"
        android:hint="Enter old passsword"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:ems="10"
        android:layout_marginTop="48dp"
        android:id="@+id/txteditanewpass"
        android:hint="Enter new password"
        android:textSize="36sp"
        android:layout_below="@+id/txteditaoldpass"
        android:layout_alignStart="@+id/txteditaoldpass"
        android:inputType="textPassword" />

    <Button
        android:text="Update Password"
        android:layout_width="400dp"
        android:layout_marginTop="142dp"
        android:id="@+id/_btnupdatepassadmin"
        android:background="@drawable/btn"
        android:textSize="36sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/txteditaconpass"
        android:layout_centerHorizontal="true"
        android:layout_height="66dp" />
</RelativeLayout>
