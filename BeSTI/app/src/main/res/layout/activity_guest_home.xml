<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guest_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sti.lipa.dev.besti.GuestHome"
    android:background="@drawable/backg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ann"
        android:id="@+id/imageView3"
        android:layout_marginBottom="750dp"
        android:layout_above="@+id/btnres"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/mission"
        android:id="@+id/imageView7"
        android:layout_marginBottom="115dp"
        android:layout_above="@+id/btnres"
        android:layout_alignParentStart="true"
        android:layout_height="300dp"
        android:layout_width="280dp" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/announcementhome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="124dp"
        android:flipInterval="2000"
        android:autoStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/f4"
            android:id="@+id/imageViewf4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/f1"
            android:id="@+id/imageViewf1" />

    </ViewFlipper>

    <ImageView
        app:srcCompat="@drawable/hymn"
        android:id="@+id/imageView8"
        android:layout_height="300dp"
        android:layout_width="250dp"
        android:layout_alignTop="@+id/imageView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:id="@+id/btnhymn"
        android:background="#000FFFFF"
        android:layout_height="250dp"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:onClick="hymn"/>

    <Button
        android:layout_width="250dp"
        android:id="@+id/btnvision"
        android:background="#000FFFFF"
        android:layout_height="250dp"
        android:onClick="vision"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toEndOf="@+id/btnhymn" />

    <Button
        android:layout_width="250dp"
        android:id="@+id/btnmission"
        android:background="#000FFFFF"
        android:layout_height="250dp"
        android:onClick="mission"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_toStartOf="@+id/imageView8" />

    <ImageView
        app:srcCompat="@drawable/vision"
        android:id="@+id/imageView5"
        android:layout_height="300dp"
        android:layout_width="280dp"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnlog"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:onClick="login"
        android:textSize="24sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        app:srcCompat="@drawable/profile"
        android:id="@+id/imageView16"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Hello, Guest!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:fontFamily="casual"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView16" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/stivitaicon"
        android:id="@+id/imageView20"
        android:layout_above="@+id/viewFlipper"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="113dp" />

    <TextView
        android:layout_height="100dp"
        android:layout_marginTop="121dp"
        android:id="@+id/announcementhome"
        android:textSize="20sp"
        android:text="                                             "
        android:layout_width="560dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SIGN UP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnres"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:onClick="register"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnlog"
        android:layout_marginEnd="5dp"/>

</RelativeLayout>
