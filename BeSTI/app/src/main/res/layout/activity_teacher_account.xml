<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sti.lipa.dev.besti.TeacherAccount"
    android:background="@drawable/backg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ann"
        android:id="@+id/announcementeacher"
        android:layout_marginBottom="948dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="You are logged in as: Teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginasteacher"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp" />

    <TextView
        android:layout_height="100dp"
        android:id="@+id/announcementeachers"
        android:textSize="18sp"
        android:text="AAA"
        android:layout_width="560dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:layout_below="@+id/loginasteacher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:text="UpdatePassword"
        android:layout_height="100dp"
        android:id="@+id/btnresjcktM"
        android:onClick="updatepass"
        android:layout_width="500dp"
        android:textColor="@android:color/holo_blue_dark"
        android:background="@drawable/btn"
        android:textSize="40sp"
        android:layout_marginBottom="188dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnWDXL" />

    <Button
        android:text="Post Announcement"
        android:layout_width="500dp"
        android:id="@+id/button12"
        android:onClick="createan"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="100dp"
        android:textSize="40sp"
        android:layout_above="@+id/btnWDXL"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp" />

    <Button
        android:text="View my Schedule"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/btnWDXL"
        android:onClick="viewsched"
        android:background="@drawable/btn"
        android:textSize="40sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_above="@+id/btnresjcktM"
        android:layout_alignStart="@+id/button12"
        android:layout_marginBottom="95dp" />

</RelativeLayout>
