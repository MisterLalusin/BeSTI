<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_student_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sti.lipa.dev.besti.StudentAccount"
    android:background="@drawable/backg"
    >

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/ann"
        android:id="@+id/imageView3"
        android:layout_height="300dp"
        android:layout_below="@+id/imgprofile"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_height="100dp"
        android:id="@+id/txtannouncementstudent"
        android:textSize="18sp"
        android:text="JAJAJA"
        android:layout_width="560dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:layout_marginTop="81dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@drawable/chr"
        android:id="@+id/imgprofile"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/viewcash" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btnchoose"
        android:onClick="updateprofile"
        android:background="#000FFFFF"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imgprofile" />

    <Button
        android:text="Log Out"
        android:layout_height="40dp"
        android:id="@+id/button13"
        android:onClick="logout"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_above="@+id/imageView3"
        android:layout_alignEnd="@+id/button11"
        android:layout_width="150dp" />

    <Button
        android:text="View my Reservations"
        android:layout_height="100dp"
        android:id="@+id/button14"
        android:onClick="viewreserves"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:layout_width="500dp"
        android:textSize="40sp" />

    <Button
        android:text="VIEW SCHEDULE"
        android:layout_height="100dp"
        android:id="@+id/btnWDXL"
        android:onClick="viewsched"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="500dp"
        android:textSize="40sp"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/txtannouncementstudent"
        android:layout_alignStart="@+id/imgprofile" />

    <Button
        android:text="Teacher Finder"
        android:layout_height="100dp"
        android:id="@+id/btnteacherfinder"
        android:onClick="teacherfinder"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="40sp"
        android:layout_width="500dp"
        android:layout_below="@+id/btnWDXL"
        android:layout_alignStart="@+id/btnWDXL"
        android:layout_marginTop="36dp" />

    <Button
        android:text="Merchandise"
        android:layout_height="100dp"
        android:id="@+id/button2"
        android:onClick="merchandise"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="29dp"
        android:layout_width="500dp"
        android:textSize="40sp"
        android:layout_below="@+id/btnteacherfinder"
        android:layout_alignStart="@+id/btnteacherfinder" />

    <Button
        android:text="UpdatePass"
        android:layout_height="100dp"
        android:id="@+id/button11"
        android:onClick="updatepass"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="500dp"
        android:layout_marginBottom="33dp"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/viewcash" />

    <Button
        android:text="View Cashier"
        android:layout_height="100dp"
        android:id="@+id/viewcash"
        android:onClick="viewcashier"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="500dp"
        android:textSize="40sp"
        android:layout_above="@+id/button11"
        android:layout_alignStart="@+id/button14"
        android:layout_marginBottom="32dp" />

    <Button
        android:text="    Upload Selected Image    "
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btnupload"
        android:onClick="updateprofile"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_above="@+id/imageView3"
        android:layout_toEndOf="@+id/imgprofile" />

    <TextView
        android:text="      You are logged in as User   "
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginasuser"
        android:textSize="24sp"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgprofile" />


</RelativeLayout>
