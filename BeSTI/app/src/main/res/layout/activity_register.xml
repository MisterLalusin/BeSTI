<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sti.lipa.dev.besti.Register"
    android:background="@drawable/backg">


    <EditText
        android:layout_width="500dp"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/txteditsnumber"
        android:hint="   Student Number"
        android:textSize="36sp"
        android:layout_below="@+id/txteditlname"
        android:layout_alignStart="@+id/txteditlname"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_height="75dp" />

    <EditText
        android:layout_width="500dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/txteditsnumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/txteditemail"
        android:hint="   E-mail"
        android:textSize="36sp"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_height="75dp" />

    <EditText
        android:layout_width="500dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/txtcpword"
        android:hint="  Confirm Password"
        android:textSize="36sp"
        android:layout_below="@+id/txteditpword"
        android:layout_alignStart="@+id/txteditpword"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_height="75dp" />

    <EditText
        android:layout_width="500dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/txteditpword"
        android:hint="   Password"
        android:textSize="36sp"
        android:background="@drawable/edittext"
        android:layout_below="@+id/txteditemail"
        android:layout_alignStart="@+id/txteditemail"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_height="75dp" />

    <TextView
        android:text="Already have an account? Click "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:lineSpacingExtra="18sp"
        android:fontFamily="serif"
        android:id="@+id/Already"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txteditphone"
        android:layout_marginBottom="21dp" />

    <EditText
        android:layout_width="500dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="113dp"
        android:id="@+id/txteditfname"
        android:textSize="36sp"
        android:hint="   First Name"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txteditemail"
        android:layout_height="75dp" />

    <Button
        android:text="here"
        android:id="@+id/btntologin"
        android:background="#00FFFFFF"
        android:textSize="26sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="66dp"
        android:textStyle="normal|bold"
        android:onClick="Login"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/Already"
        android:layout_toEndOf="@+id/Already" />

    <EditText
        android:layout_width="500dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/txteditlname"
        android:textSize="36sp"
        android:hint="   Last Name"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/txteditfname"
        android:layout_alignStart="@+id/txteditfname"
        android:layout_height="75dp" />

    <Spinner
        android:layout_height="75dp"
        android:layout_marginTop="35dp"
        android:id="@+id/spinner"
        android:layout_width="500dp"
        android:layout_below="@+id/txteditphone"
        android:layout_alignStart="@+id/txteditphone"
        android:background="@drawable/edittext"/>

    <EditText
        android:layout_width="500dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txteditphone"
        android:textSize="36sp"
        android:hint="   Phone Number"
        android:layout_marginTop="32dp"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_height="75dp"
        android:layout_below="@+id/txtcpword"
        android:layout_alignStart="@+id/txtcpword" />

    <Button
        android:text="Register"
        android:layout_width="300dp"
        android:id="@+id/btnreg"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_height="86dp"
        android:layout_above="@+id/Already"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
