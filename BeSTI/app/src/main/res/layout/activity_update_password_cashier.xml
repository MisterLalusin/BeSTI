<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_admin_password"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sti.lipa.dev.besti.UpdateAdminPassword"
    android:background="@drawable/backg"
    android:layout_height="1000dp">

    <Button
        android:text="Update Password"
        android:layout_height="66dp"
        android:layout_marginTop="232dp"
        android:id="@+id/abtnupdatepassadmin"
        android:background="@drawable/btn"
        android:textSize="36sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="450dp"
        android:layout_below="@+id/atxteditaconpass"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/atxteditaoldpass"
        android:hint="   Enter old passsword"
        android:textSize="36sp"
        android:layout_marginTop="122dp"
        android:background="@drawable/edittext"
        android:fontFamily="monospace"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/abtnupdatepassadmin" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/atxteditanewpass"
        android:hint="   Enter new password"
        android:textSize="36sp"
        android:layout_marginTop="57dp"
        android:background="@drawable/edittext"
        android:fontFamily="monospace"
        android:layout_below="@+id/atxteditaoldpass"
        android:layout_alignStart="@+id/atxteditaoldpass" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/atxteditaconpass"
        android:hint="  Confirm new password"
        android:textSize="36sp"
        android:layout_marginTop="57dp"
        android:background="@drawable/edittext"
        android:fontFamily="monospace"
        android:typeface="monospace"
        android:layout_below="@+id/atxteditanewpass"
        android:layout_alignStart="@+id/atxteditanewpass" />
</RelativeLayout>
