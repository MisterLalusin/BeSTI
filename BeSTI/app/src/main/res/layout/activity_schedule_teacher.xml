<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scheduleuser"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sti.lipa.dev.besti.ScheduleTeacher"
    android:background="@drawable/backg"
    android:layout_height="800dp"
    android:layout_width="700dp">

    <ImageView
        android:layout_width="500dp"
        app:srcCompat="@drawable/schedbg"
        android:id="@+id/imageView6"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_height="700dp" />

    <ListView
        android:id="@+id/listviewteacher"
        android:foregroundGravity="center"
        android:layout_width="400dp"
        android:cacheColorHint="@android:color/holo_blue_dark"
        android:divider="@android:color/holo_orange_light"
        android:layout_marginBottom="135dp"
        android:layout_marginEnd="28dp"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_height="320dp" />

    <TextView
        android:text="Have A Good Day STIer!"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="36sp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@android:color/holo_orange_light"
        android:layout_width="400dp"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignEnd="@+id/listviewuser"
        android:layout_marginEnd="28dp"
        android:textAlignment="center" />

</RelativeLayout>
