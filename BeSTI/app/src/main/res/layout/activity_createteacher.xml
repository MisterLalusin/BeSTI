<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sti.lipa.dev.besti.CreateTeacherAccount"
    android:background="@drawable/backg">


    <EditText
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="31dp"
        android:id="@+id/atxteditlname"
        android:textSize="36sp"
        android:hint="   Last Name"
        android:layout_below="@+id/atxteditfname"
        android:layout_alignStart="@+id/atxteditfname"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/atxteditsnumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/atxteditemail"
        android:hint="   E-mail"
        android:textSize="36sp"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/atxtcpword"
        android:hint="  Confirm Password"
        android:textSize="36sp"
        android:layout_below="@+id/atxteditpword"
        android:layout_alignStart="@+id/atxteditpword"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/atxteditphone"
        android:textSize="36sp"
        android:hint="   Phone Number"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/atxtcpword"
        android:layout_alignStart="@+id/atxtcpword"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/atxteditpword"
        android:hint="   Password"
        android:textSize="36sp"
        android:background="@drawable/edittext"
        android:layout_below="@+id/atxteditemail"
        android:layout_alignStart="@+id/atxteditemail"
        android:fontFamily="sans-serif-smallcaps" />
    <EditText
        android:layout_width="500dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="113dp"
        android:id="@+id/atxteditfname"
        android:layout_height="75dp"
        android:textSize="36sp"
        android:hint="   First Name"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/atxteditemail" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="35dp"
        android:id="@+id/atxteditsnumber"
        android:hint="   Teacher Number"
        android:textSize="36sp"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/atxteditlname"
        android:layout_alignStart="@+id/atxteditlname" />

    <Button
        android:text="Create Account"
        android:layout_width="300dp"
        android:id="@+id/abtnreg"
        android:background="@drawable/btn"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_height="86dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp" />

    <Spinner
        android:layout_height="75dp"
        android:layout_marginTop="33dp"
        android:id="@+id/aspinner"
        android:layout_width="500dp"
        android:background="@drawable/edittext"
        android:layout_below="@+id/atxteditphone"
        android:layout_alignStart="@+id/atxteditphone" />


</RelativeLayout>
