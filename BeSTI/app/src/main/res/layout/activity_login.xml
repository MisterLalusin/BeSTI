<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sti.lipa.dev.besti.Login"
    android:background="@drawable/backg"
    android:layout_height="1000dp">

    <EditText
        android:layout_width="500dp"
        android:layout_height="93dp"
        android:inputType="number"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="227dp"
        android:id="@+id/txtsnumber"
        android:hint="   Account Number"
        android:textSize="36sp"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif-smallcaps" />

    <Button
        android:text="Login"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="141dp"
        android:id="@+id/btnlogin"
        android:background="@drawable/btn"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="36sp"
        android:layout_below="@+id/txtpword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="93dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="67dp"
        android:id="@+id/txtpword"
        android:hint="   Password"
        android:textSize="36sp"
        android:background="@drawable/edittext"
        android:layout_below="@+id/txtsnumber"
        android:layout_alignStart="@+id/txtsnumber"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
    android:text="Don't have an account?  "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="24sp"
    android:lineSpacingExtra="18sp"
    android:fontFamily="serif"
    android:id="@+id/Already"
        android:layout_marginTop="22dp"
        android:layout_marginStart="52dp"
        android:layout_below="@+id/btnlogin"
        android:layout_alignStart="@+id/txtpword" />

    <Button
        android:text="sign up"
        android:id="@+id/btntoregister"
        android:background="#00FFFFFF"
        android:textSize="26sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"
        android:onClick="Register"
        android:layout_height="30dp"
        android:layout_width="99dp"
        android:layout_alignTop="@+id/Already"
        android:layout_toEndOf="@+id/Already" />
</RelativeLayout>
