<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_reservation_cashier"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sti.lipa.dev.besti.UpdateReservationCashier"
    android:background="@drawable/backg"
    android:layout_height="1000dp">


    <Button
        android:text="DELETE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bbtnreg"
        android:layout_centerHorizontal="true"
        android:id="@+id/btndel" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:id="@+id/btxteditsnumber"
        android:hint="number"
        android:textSize="24sp"
        android:fontFamily="monospace" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/btxteditphone"
        android:hint="editphone"
        android:layout_below="@+id/btxteditpword"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:fontFamily="monospace"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/btxteditpword"
        android:hint="editemail"
        android:layout_below="@+id/btxteditemail"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:fontFamily="monospace"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/btxteditlname"
        android:hint="lname"
        android:layout_below="@+id/btxteditfname"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:fontFamily="monospace"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/btxteditfname"
        android:hint="fname"
        android:layout_below="@+id/btxteditsnumber"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:fontFamily="monospace"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Response"
        android:layout_width="300dp"
        android:id="@+id/bbtnreg"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_height="86dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/btxteditemail"
        android:hint="editemail"
        android:textSize="24sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/btxteditlname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:background="@drawable/edittext"
        android:layout_height="150dp"
        android:layout_above="@+id/bbtnreg"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp">

        <RadioButton
            android:text="Available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/available"
            android:layout_weight="1"
            android:textSize="40sp"
            android:fontFamily="casual" />

        <RadioButton
            android:text="Not Available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/_notavailable"
            android:layout_weight="1"
            android:textSize="40sp"
            android:fontFamily="casual" />
    </RadioGroup>

</RelativeLayout>
